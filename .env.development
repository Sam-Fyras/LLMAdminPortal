REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_AZURE_CLIENT_ID=your-dev-client-id
REACT_APP_AZURE_TENANT_ID=your-dev-tenant-id

# Enable mock authentication for testing without Azure AD
# Set to 'true' to bypass MSAL and use mock user data
# Set to 'false' or remove to use real Azure AD authentication
REACT_APP_MOCK_AUTH=true

# Enable mock API responses for testing without backend
# Set to 'true' to intercept all API calls and return mock data
# Set to 'false' to use real backend services
REACT_APP_MOCK_API=true

# Mock API response delay (milliseconds)
# Simulates network latency for realistic testing
REACT_APP_MOCK_API_DELAY=500
